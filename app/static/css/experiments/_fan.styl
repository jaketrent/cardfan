.fake-container
  position: absolute
  top: 100px
  left: 100px
  height: 400px
  width: 600px
  outline: 2px solid red
  background: rgba(red, .1)

.fake
  position: absolute
  bottom: 0
  left: 200px
  height: 300px
  width: 200px
  outline: 2px solid blue
  transform-origin: 50% 100%
  background: rgba(blue, .1)

  &.fake-1
    transform: rotate(-60deg)
  &.fake-2
    transform: rotate(-40deg)
  &.fake-3
    transform: rotate(-20deg)
  &.fake-4
    transform: rotate(0deg)
  &.fake-5
    transform: rotate(20deg)
  &.fake-6
    transform: rotate(40deg)
  &.fake-7
    transform: rotate(60deg)

